{
  "compilerOptions": {
    "allowJs": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "target": "es2020",
    "module": "es2020",
    "esModuleInterop": true,
    "outDir": "./dist",
    "lib": ["esnext", "es2015", "esnext.asynciterable", "dom"],
    "jsx": "react"
  },
  "ts-node": {
    "moduleTypes": {
      "uint8arrays": "mjs",
      "nanoid": "cjs"
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["src/**/*.test.ts", "src/**/*.test.tsx", "src/test-utils"]
}
